# ===============================================================================
# CONFIGURACIÓN PARA DESARROLLO LOCAL - Sistema TCP Label Transfer
# Cliente: Adisseo
# Entorno: Local/Desarrollo
# ===============================================================================

# Puertos de los servidores (locales)
SERVER_PORT=9110
PLC_SERVER_PORT=9200
WEB_PORT=3001

# Configuración de red local
IOT_IP=192.168.214.1
IOT_REMOTE_IP=localhost

# Configuración de archivos y carpetas (locales)
OUTPUT_FOLDER=./data/received_files
ALLOWED_EXTENSIONS=.prn,.nlbl
FORWARD_ENABLED=true
LOGS_PATH=./data/logs
RECEIVED_FILES_PATH=./data/received_files

# Configuración para IPs especiales con tamaño fijo de bytes
SPECIAL_IPS=192.168.214.1,192.168.214.20,192.168.214.30,localhost
FIXED_BYTES_SIZE=254

# Configuración para comunicación JSON con PLC Simotion
PLC_JSON_DELIMITER=#
PLC_MAX_MESSAGE_SIZE=254

# Configuración del PLC Siemens Simotion D425 (simulado localmente)
PLC_ENABLED=true
PLC_HOST=localhost
PLC_PORT=9200
PLC_RACK=0
PLC_SLOT=2
PLC_DEBUG=true

# Configuración de impresoras de etiquetas (simuladores locales)
PRINTER_PRODUCT_IP=localhost
PRINTER_PRODUCT_PORT=9100
PRINTER_RFID_IP=localhost  
PRINTER_RFID_PORT=9101

# Configuración del sistema de etiquetas
WAIT_FOR_COMMAND=80
AUTO_SPLIT_ENABLED=false
AUTO_GENERATE_RFID=false

# Configuración de respuesta ADI (desarrollo)
IMMEDIATE_RESPONSE_DELAY=2000
PLC_COMMAND_TIMEOUT=8000
WAIT_FOR_CLIENT_CLOSE=5000

# Modo de desarrollo
NODE_ENV=development
DEBUG_MODE=true 