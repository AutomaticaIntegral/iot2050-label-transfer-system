# Configuración para entorno de simulación
# Automática Integral - Proyecto Adisseo TCP Label Transfer

# Puertos de servidor (se usan puertos diferentes para no interferir con producción)
SERVER_PORT=9100
PLC_SERVER_PORT=9200
WEB_PORT=3001

# Configuración de red para simulación (todo en localhost)
IOT_REMOTE_IP=127.0.0.1

# IPs especiales simuladas
SPECIAL_IPS=127.0.0.1:8001,127.0.0.1:8002,127.0.0.1:8003
FIXED_BYTES_SIZE=254
PLC_JSON_DELIMITER=#
PLC_MAX_MESSAGE_SIZE=254

# Configuración de impresoras simuladas
PRINTER_PRODUCT_HOST=127.0.0.1
PRINTER_PRODUCT_PORT=8010
PRINTER_RFID_HOST=127.0.0.1
PRINTER_RFID_PORT=8011

# Puertos para dashboards de simulación
SIMULATION_DASHBOARD_PORT=3050
IOT2050_DASHBOARD_PORT=3051
ADI_DASHBOARD_PORT=3052
PRODUCT_PRINTER_DASHBOARD_PORT=3053
RFID_PRINTER_DASHBOARD_PORT=3054
PLC_DASHBOARD_PORT=3055

# Modo debug
DEBUG=true
LOG_LEVEL=debug

# Rutas de almacenamiento
SIMULATION_LOGS_PATH=./simulation/logs
RECEIVED_LABELS_PATH=./simulation/printers/labels_received_by_printer
RECEIVED_RFID_LABELS_PATH=./simulation/printers/rfid_labels_received
